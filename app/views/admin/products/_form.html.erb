<%= simple_form_for [:admin, @product], :html => { :class => 'form-vertical' } do |f| %>
  <%= f.association :category, prompt: 'Selecione a categoria' %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :price_promo %>
  <%= f.input :status %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_products_path, :class => 'btn btn-default' %>
<% end %>
