<%= nav_bar fixed: :top, brand: "Ruby Store", responsive: true do %>
  <%= menu_group do %>
      <%= menu_item "Home", root_path %>
      
      <%= menu_item "Produtos", products_path %>
      <%= menu_item "Contatos", contatos_path %>
  <% end -%>

  <%= menu_group :pull => :right do %>
      <% if user_signed_in? %>
        <%= drop_down 'Minha Conta' do %>
          <%= menu_item 'Editar Perfil', edit_user_registration_path %>
        <% end %>        
          <%= menu_item "<i class=\"fa fa-power-off\"></i> Sair".html_safe, destroy_user_session_path, :method => Devise.sign_out_via %>
      <% else %>
          <%= menu_item "<i class=\"fa fa-power-off\"></i> Entrar".html_safe, new_user_session_path %>
      <% end %>
  <% end -%>
  
<% end -%>


